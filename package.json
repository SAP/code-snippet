{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/@types/jest",
      "**/@types/mocha",
      "code-snippet-frontend/**"
    ]
  },
  "scripts": {
    "release:version": "lerna version",
    "release:publish": "lerna publish from-git --yes",
    "ci": "npm-run-all coverage:clean legal:* ci:subpackages coverage:merge",
    "ci:subpackages": "lerna run ci",
    "format:fix": "prettier --write \"**/*.@(js|ts|json|md|vue)\" --ignore-path=.gitignore",
    "format:validate": "prettier --check \"**/*.@(js|ts|json|md|vue)\" --ignore-path=.gitignore",
    "coverage:clean": "rimraf ./coverage",
    "coverage:merge": "lcov-result-merger \"./coverage/lcov*.info\" \"./coverage/lcov.info\"",
    "legal:delete": "lerna exec \"shx rm -rf .reuse LICENSES\" || true",
    "legal:copy": "lerna exec \"shx cp -r ../../.reuse .reuse && shx cp -r ../../LICENSES LICENSES\""
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "4.0.0",
    "lcov-result-merger": "3.1.0",
    "rimraf": "3.0.2",
    "coveralls": "2.11.16",
    "shx": "0.3.3",
    "npm-run-all": "4.1.5",
    "husky": "4.3.6",
    "lint-staged": "10.5.4",
    "cz-conventional-changelog": "3.3.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md,vue}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
