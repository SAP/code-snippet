{
	"name": "code-snippet",
	"version": "0.0.18",
	"displayName": "Code Snippet",
	"publisher": "SAPOSS",
	"author": {
		"name": "SAP SE"
	},
	"license": "Apache 2.0",
	"description": "A VSCode extension that provides a simple way to add code snippets.",
	"repository": {
		"type": "git",
		"url": "https://github.com/SAP/code-snippet.git"
	},
	"bugs": {
		"url": "https://github.com/SAP/code-snippet/issues"
	},
	"icon": "Wizard_logo.png",
	"engines": {
		"vscode": "^1.39.2"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"code",
		"snippet",
		"snipping ",
		"tool",
		"sap"
	],
	"activationEvents": [
		"*",
		"onCommand:loadCodeSnippet",
		"onWebviewPanel:codeSnippet"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "loadCodeSnippet",
				"title": "Code Snippet"
			},
			{
				"command": "codeSnippet.toggleOutput",
				"title": "Show Output",
				"icon": {
					"light": "./resources/images/icons/console_light.svg",
					"dark": "./resources/images/icons/console_dark.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "loadCodeSnippet",
					"when": "false"
				},
				{
					"command": "codeSnippet.toggleOutput",
					"when": "false"
				}
			],
			"editor/title": [
				{
					"command": "codeSnippet.toggleOutput",
					"group": "navigation",
					"when": "codeSnippet.Focused"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Code Snippet",
			"properties": {
				"Code Snippet.loggingLevel": {
					"type": "string",
					"enum": [
						"off",
						"fatal",
						"error",
						"warn",
						"info",
						"debug",
						"trace"
					],
					"default": "error",
					"description": "The verbosity of logging according to the following order: trace > debug > info > warn > error > fatal > off.",
					"scope": "resource"
				},
				"Code Snippet.sourceLocationTracking": {
					"type": "boolean",
					"default": false,
					"description": "If chosen, the location of the source code is added to log entries. Warning â€“ this action may slow your extension. We recommend you use it only for debugging.",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"backend": "npm i && npm run compile",
		"types": "cd ../types && npm i && npm run compile",
		"frontend": "npm run frontend:install && npm run frontend:build && npm run frontend:copy",
		"frontend:install": "cd ../frontend && npm i",
		"frontend:build": "cd ../frontend && npm run build",
		"frontend:copy": "webpack --mode none --config ./copy.frontend.webpack.config.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"webpack-prod": "webpack --mode production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "npm run webpack && vsce package .",
		"test": "nyc mocha -p tsconfig.json --opts ./mocha.opts",
		"ws:run": "node ./out/src/webSocketServer/index.js",
		"lint": "eslint . --ext .ts,.tsx --cache",
		"lint:fix": "eslint . --ext .ts,.tsx --cache --fix"
	},
	"dependencies": {
		"@sap-devx/webview-rpc": "^0.2.2",
		"@sap-devx/yeoman-ui-types": "0.0.1",
		"@vscode-logging/logger": "1.1.0",
		"chalk": "^4.0.0",
		"datauri": "^2.0.0",
		"fs-extra": "^8.1.0",
		"humanize-string": "^1.0.2",
		"lodash": "^4.17.15",
		"object-hash": "^2.0.3",
		"strip-ansi": "^6.0.0",
		"titleize": "^1.0.1",
		"ws": "^7.2.5",
		"yeoman-environment": "2.8.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.9",
		"@types/fs-extra": "^8.1.0",
		"@types/inquirer": "^6.5.0",
		"@types/lodash": "^4.14.150",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.17.21",
		"@types/object-hash": "^1.3.1",
		"@types/sinon": "^7.5.0",
		"@types/ws": "^6.0.3",
		"@types/yeoman-environment": "2.3.3",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"prettier": "^2.0.5",
		"typescript": "^3.9.7",
		"bufferutil": "^4.0.1",
		"chai": "^4.2.0",
		"copy-webpack-plugin": "^5.0.5",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"sinon": "^9.2.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.9.1",
		"utf-8-validate": "^5.0.2",
		"string-replace-loader": "^2.1.1",
		"vsce": "^1.73.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"lcov-result-merger": "3.1.0",
		"coveralls": "2.11.16",
    		"cz-conventional-changelog": "3.3.0",
 		"@commitlint/cli": "11.0.0",
  		"@commitlint/config-conventional": "11.0.0",
  		"husky": "4.3.0"
	},
	"husky": {
           "hooks": {
               "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
           }
        },
        "config": {
           "commitizen": {
               "path": "cz-conventional-changelog"
           }
        },
        "commitlint": {
           "extends": [
               "@commitlint/config-conventional"
           ]
        }
}
